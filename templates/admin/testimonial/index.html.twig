{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Témoignages{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Gestion des Témoignages</h1>
                <div>
                    <a href="{{ path('admin_testimonial_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus"></i> Nouveau témoignage
                    </a>
                </div>
            </div>

            <!-- Testimonials Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Liste des Témoignages</h5>
                </div>
                <div class="card-body">
                    {% if testimonials is empty %}
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucun témoignage disponible.</p>
                            <a href="{{ path('admin_testimonial_new') }}" class="btn btn-primary">
                                Créer le premier témoignage
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Client</th>
                                        <th>Société</th>
                                        <th>Statut</th>
                                        <th>Note</th>
                                        <th>Ordre</th>
                                        <th>Traductions</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for testimonial in testimonials %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if testimonial.photo %}
                                                        <img src="/{{ testimonial.photo.webPath }}" alt="{{ testimonial.photo.alt }}" 
                                                             class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                    {% else %}
                                                        <div class="bg-secondary rounded-circle me-2 d-flex align-items-center justify-content-center" 
                                                             style="width: 40px; height: 40px;">
                                                            <i class="bi bi-person text-white"></i>
                                                        </div>
                                                    {% endif %}
                                                    <div>
                                                        <strong>{{ testimonial.clientName }}</strong><br>
                                                        <small class="text-muted">{{ testimonial.slug }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if testimonial.company %}
                                                    <strong>{{ testimonial.company }}</strong><br>
                                                    {% if testimonial.position %}
                                                        <small class="text-muted">{{ testimonial.position }}</small>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="text-muted">Non renseigné</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if testimonial.isActive %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if testimonial.rating %}
                                                    {% for i in 1..5 %}
                                                        {% if i <= testimonial.rating %}
                                                            <i class="bi bi-star-fill text-warning"></i>
                                                        {% else %}
                                                            <i class="bi bi-star text-muted"></i>
                                                        {% endif %}
                                                    {% endfor %}
                                                    <small class="ms-1">({{ testimonial.rating }}/5)</small>
                                                {% else %}
                                                    <span class="text-muted">Aucune note</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-info">{{ testimonial.sortOrder }}</span>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    {% for translation in testimonial.translations %}
                                                        <span class="badge bg-success" title="{{ translation.language.nativeName }}">
                                                            {{ translation.language.code|upper }}
                                                        </span>
                                                    {% endfor %}
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_testimonial_show', {id: testimonial.id}) }}" 
                                                       class="btn btn-sm btn-outline-info"
                                                       title="Voir">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_testimonial_edit', {id: testimonial.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="Éditer">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#deleteModal{{ testimonial.id }}"
                                                            title="Supprimer">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <!-- Delete Modals -->
                        {% for testimonial in testimonials %}
                            <div class="modal fade" id="deleteModal{{ testimonial.id }}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirmer la suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir supprimer le témoignage de "{{ testimonial.clientName }}" ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <form method="post" action="{{ path('admin_testimonial_delete', {id: testimonial.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ testimonial.id) }}">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}