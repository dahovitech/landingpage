{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Fonctionnalités{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Gestion des Fonctionnalités</h1>
                <div>
                    <a href="{{ path('admin_feature_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus"></i> Nouvelle fonctionnalité
                    </a>
                </div>
            </div>

            <!-- Features Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Liste des Fonctionnalités</h5>
                </div>
                <div class="card-body">
                    {% if features is empty %}
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucune fonctionnalité disponible.</p>
                            <a href="{{ path('admin_feature_new') }}" class="btn btn-primary">
                                Créer la première fonctionnalité
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Fonctionnalité</th>
                                        <th>Statut</th>
                                        <th>Mise en avant</th>
                                        <th>Ordre</th>
                                        <th>Traductions</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for feature in features %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if feature.icon %}
                                                        <i class="{{ feature.icon }} me-2 text-primary" style="font-size: 1.5rem;"></i>
                                                    {% endif %}
                                                    <div>
                                                        <strong>{{ feature.title }}</strong><br>
                                                        <small class="text-muted">{{ feature.slug }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if feature.isActive %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if feature.isFeatured %}
                                                    <span class="badge bg-warning">Mis en avant</span>
                                                {% else %}
                                                    <span class="badge bg-light text-dark">Normal</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-info">{{ feature.sortOrder }}</span>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    {% for translation in feature.translations %}
                                                        <span class="badge bg-success" title="{{ translation.language.nativeName }}">
                                                            {{ translation.language.code|upper }}
                                                        </span>
                                                    {% endfor %}
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_feature_show', {id: feature.id}) }}" 
                                                       class="btn btn-sm btn-outline-info"
                                                       title="Voir">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_feature_edit', {id: feature.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="Éditer">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#deleteModal{{ feature.id }}"
                                                            title="Supprimer">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <!-- Delete Modals -->
                        {% for feature in features %}
                            <div class="modal fade" id="deleteModal{{ feature.id }}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirmer la suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir supprimer la fonctionnalité "{{ feature.title }}" ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <form method="post" action="{{ path('admin_feature_delete', {id: feature.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feature.id) }}">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}