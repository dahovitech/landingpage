{% extends 'admin/base.html.twig' %}

{% block title %}{{ feature.title }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">{{ feature.title }}</h1>
                <div>
                    <a href="{{ path('admin_feature_edit', {id: feature.id}) }}" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Éditer
                    </a>
                    <a href="{{ path('admin_feature_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Feature Details -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Détails de la Fonctionnalité</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Slug:</dt>
                                <dd class="col-sm-8"><code>{{ feature.slug }}</code></dd>
                                
                                <dt class="col-sm-4">Icône:</dt>
                                <dd class="col-sm-8">
                                    {% if feature.icon %}
                                        <i class="{{ feature.icon }} me-2"></i> <code>{{ feature.icon }}</code>
                                    {% else %}
                                        <span class="text-muted">Aucune icône</span>
                                    {% endif %}
                                </dd>
                                
                                <dt class="col-sm-4">Ordre:</dt>
                                <dd class="col-sm-8">{{ feature.sortOrder }}</dd>
                                
                                <dt class="col-sm-4">Statut:</dt>
                                <dd class="col-sm-8">
                                    {% if feature.isActive %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </dd>
                                
                                <dt class="col-sm-4">Mise en avant:</dt>
                                <dd class="col-sm-8">
                                    {% if feature.isFeatured %}
                                        <span class="badge bg-warning">Oui</span>
                                    {% else %}
                                        <span class="badge bg-light text-dark">Non</span>
                                    {% endif %}
                                </dd>
                                
                                <dt class="col-sm-4">Créé le:</dt>
                                <dd class="col-sm-8">{{ feature.createdAt|date('d/m/Y H:i') }}</dd>
                                
                                <dt class="col-sm-4">Modifié le:</dt>
                                <dd class="col-sm-8">{{ feature.updatedAt|date('d/m/Y H:i') }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Translations -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Traductions</h5>
                        </div>
                        <div class="card-body">
                            {% if feature.translations is empty %}
                                <div class="text-center py-4">
                                    <i class="bi bi-translate fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Aucune traduction disponible.</p>
                                    <a href="{{ path('admin_feature_edit', {id: feature.id}) }}" class="btn btn-primary">
                                        Ajouter des traductions
                                    </a>
                                </div>
                            {% else %}
                                <!-- Language Tabs -->
                                <ul class="nav nav-tabs" id="languageTabs" role="tablist">
                                    {% for translation in feature.translations %}
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                                                    id="{{ translation.language.code }}-tab" 
                                                    data-bs-toggle="tab" 
                                                    data-bs-target="#{{ translation.language.code }}-content" 
                                                    type="button" role="tab">
                                                {{ translation.language.nativeName }}
                                                {% if translation.language.isDefault %}
                                                    <span class="badge bg-primary ms-1">Défaut</span>
                                                {% endif %}
                                            </button>
                                        </li>
                                    {% endfor %}
                                </ul>

                                <!-- Language Content -->
                                <div class="tab-content" id="languageTabsContent">
                                    {% for translation in feature.translations %}
                                        <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                                             id="{{ translation.language.code }}-content" 
                                             role="tabpanel">
                                            <div class="p-3">
                                                <h6>Titre</h6>
                                                <p class="fw-bold">{{ translation.title }}</p>
                                                
                                                {% if translation.shortDescription %}
                                                    <h6>Description courte</h6>
                                                    <p>{{ translation.shortDescription }}</p>
                                                {% endif %}
                                                
                                                {% if translation.description %}
                                                    <h6>Description</h6>
                                                    <div class="border p-3 bg-light">
                                                        {{ translation.description|nl2br }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}