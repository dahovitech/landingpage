{% extends 'admin/base.html.twig' %}

{% block title %}{{ pricingPlan.name }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Plan Tarifaire: {{ pricingPlan.name }}</h1>
                <div>
                    <a href="{{ path('admin_pricing_plan_edit', {id: pricingPlan.id}) }}" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Éditer
                    </a>
                    <a href="{{ path('admin_pricing_plan_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Pricing Plan Details -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Détails du Plan</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Nom:</dt>
                                <dd class="col-sm-8">{{ pricingPlan.name }}</dd>
                                
                                <dt class="col-sm-4">Slug:</dt>
                                <dd class="col-sm-8"><code>{{ pricingPlan.slug }}</code></dd>
                                
                                <dt class="col-sm-4">Prix:</dt>
                                <dd class="col-sm-8">
                                    {% if pricingPlan.price %}
                                        <strong class="h5 text-primary">{{ pricingPlan.price }}€</strong>
                                        {% if pricingPlan.billingPeriod %}
                                            <small class="text-muted">/ {{ pricingPlan.billingPeriod }}</small>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-success">Gratuit</span>
                                    {% endif %}
                                </dd>
                                
                                {% if pricingPlan.buttonText %}
                                    <dt class="col-sm-4">Bouton:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-primary">{{ pricingPlan.buttonText }}</span>
                                        {% if pricingPlan.buttonUrl %}
                                            <br><small><a href="{{ pricingPlan.buttonUrl }}" target="_blank">{{ pricingPlan.buttonUrl }}</a></small>
                                        {% endif %}
                                    </dd>
                                {% endif %}
                                
                                <dt class="col-sm-4">Ordre:</dt>
                                <dd class="col-sm-8">{{ pricingPlan.sortOrder }}</dd>
                                
                                <dt class="col-sm-4">Statut:</dt>
                                <dd class="col-sm-8">
                                    {% if pricingPlan.isActive %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                    {% if pricingPlan.isPopular %}
                                        <span class="badge bg-warning ms-1">Populaire</span>
                                    {% endif %}
                                </dd>
                                
                                <dt class="col-sm-4">Créé le:</dt>
                                <dd class="col-sm-8">{{ pricingPlan.createdAt|date('d/m/Y H:i') }}</dd>
                                
                                <dt class="col-sm-4">Modifié le:</dt>
                                <dd class="col-sm-8">{{ pricingPlan.updatedAt|date('d/m/Y H:i') }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Translations -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Traductions</h5>
                        </div>
                        <div class="card-body">
                            {% if pricingPlan.translations is empty %}
                                <div class="text-center py-4">
                                    <i class="bi bi-translate fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Aucune traduction disponible.</p>
                                    <a href="{{ path('admin_pricing_plan_edit', {id: pricingPlan.id}) }}" class="btn btn-primary">
                                        Ajouter des traductions
                                    </a>
                                </div>
                            {% else %}
                                <!-- Language Tabs -->
                                <ul class="nav nav-tabs" id="languageTabs" role="tablist">
                                    {% for translation in pricingPlan.translations %}
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                                                    id="{{ translation.language.code }}-tab" 
                                                    data-bs-toggle="tab" 
                                                    data-bs-target="#{{ translation.language.code }}-content" 
                                                    type="button" role="tab">
                                                {{ translation.language.nativeName }}
                                                {% if translation.language.isDefault %}
                                                    <span class="badge bg-primary ms-1">Défaut</span>
                                                {% endif %}
                                            </button>
                                        </li>
                                    {% endfor %}
                                </ul>

                                <!-- Language Content -->
                                <div class="tab-content" id="languageTabsContent">
                                    {% for translation in pricingPlan.translations %}
                                        <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                                             id="{{ translation.language.code }}-content" 
                                             role="tabpanel">
                                            <div class="p-3">
                                                {% if translation.description %}
                                                    <h6>Description</h6>
                                                    <p>{{ translation.description|nl2br }}</p>
                                                {% endif %}
                                                
                                                {% if translation.features %}
                                                    <h6>Fonctionnalités</h6>
                                                    <ul class="list-group list-group-flush">
                                                        {% for feature in translation.features|split('\n') %}
                                                            {% if feature|trim %}
                                                                <li class="list-group-item d-flex align-items-center">
                                                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                                                    {{ feature|trim }}
                                                                </li>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </ul>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}