{% extends 'admin/base.html.twig' %}

{% block title %}{{ faq.question }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Question FAQ</h1>
                <div>
                    <a href="{{ path('admin_faq_edit', {id: faq.id}) }}" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Éditer
                    </a>
                    <a href="{{ path('admin_faq_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- FAQ Details -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Détails de la FAQ</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                {% if faq.category %}
                                    <dt class="col-sm-4">Catégorie:</dt>
                                    <dd class="col-sm-8"><span class="badge bg-info">{{ faq.category }}</span></dd>
                                {% endif %}
                                
                                <dt class="col-sm-4">Slug:</dt>
                                <dd class="col-sm-8"><code>{{ faq.slug }}</code></dd>
                                
                                <dt class="col-sm-4">Ordre:</dt>
                                <dd class="col-sm-8">{{ faq.sortOrder }}</dd>
                                
                                <dt class="col-sm-4">Statut:</dt>
                                <dd class="col-sm-8">
                                    {% if faq.isActive %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </dd>
                                
                                <dt class="col-sm-4">Créé le:</dt>
                                <dd class="col-sm-8">{{ faq.createdAt|date('d/m/Y H:i') }}</dd>
                                
                                <dt class="col-sm-4">Modifié le:</dt>
                                <dd class="col-sm-8">{{ faq.updatedAt|date('d/m/Y H:i') }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Translations -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Traductions</h5>
                        </div>
                        <div class="card-body">
                            {% if faq.translations is empty %}
                                <div class="text-center py-4">
                                    <i class="bi bi-translate fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Aucune traduction disponible.</p>
                                    <a href="{{ path('admin_faq_edit', {id: faq.id}) }}" class="btn btn-primary">
                                        Ajouter des traductions
                                    </a>
                                </div>
                            {% else %}
                                <!-- Language Tabs -->
                                <ul class="nav nav-tabs" id="languageTabs" role="tablist">
                                    {% for translation in faq.translations %}
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                                                    id="{{ translation.language.code }}-tab" 
                                                    data-bs-toggle="tab" 
                                                    data-bs-target="#{{ translation.language.code }}-content" 
                                                    type="button" role="tab">
                                                {{ translation.language.nativeName }}
                                                {% if translation.language.isDefault %}
                                                    <span class="badge bg-primary ms-1">Défaut</span>
                                                {% endif %}
                                            </button>
                                        </li>
                                    {% endfor %}
                                </ul>

                                <!-- Language Content -->
                                <div class="tab-content" id="languageTabsContent">
                                    {% for translation in faq.translations %}
                                        <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                                             id="{{ translation.language.code }}-content" 
                                             role="tabpanel">
                                            <div class="p-3">
                                                <div class="card">
                                                    <div class="card-header bg-primary text-white">
                                                        <h6 class="mb-0">
                                                            <i class="bi bi-question-circle me-2"></i>
                                                            {{ translation.question }}
                                                        </h6>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="text-muted">
                                                            {{ translation.answer|nl2br }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}