{% extends 'admin/base.html.twig' %}

{% block title %}Éditer la Question FAQ{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Éditer la Question FAQ</h1>
                <div>
                    <a href="{{ path('admin_faq_show', {id: faq.id}) }}" class="btn btn-info me-2">
                        <i class="bi bi-eye"></i> Voir
                    </a>
                    <a href="{{ path('admin_faq_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>

            <form method="post" class="needs-validation" novalidate>
                <div class="row">
                    <!-- FAQ Configuration -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Configuration de la FAQ</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="category" class="form-label">Catégorie</label>
                                    <input type="text" class="form-control" id="category" name="category" 
                                           value="{{ faq.category }}">
                                    <div class="form-text">Permet de regrouper les questions</div>
                                </div>

                                <div class="mb-3">
                                    <label for="slug" class="form-label">Slug (URL)</label>
                                    <input type="text" class="form-control" id="slug" name="slug" 
                                           value="{{ faq.slug }}">
                                </div>

                                <div class="mb-3">
                                    <label for="sortOrder" class="form-label">Ordre de tri</label>
                                    <input type="number" class="form-control" id="sortOrder" name="sortOrder" 
                                           value="{{ faq.sortOrder }}" min="0">
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isActive" 
                                               name="isActive" value="1" 
                                               {{ faq.isActive ? 'checked' : '' }}>
                                        <label class="form-check-label" for="isActive">
                                            Question active
                                        </label>
                                    </div>
                                </div>

                                <div class="alert alert-info">
                                    <small>
                                        <strong>Créé le:</strong> {{ faq.createdAt|date('d/m/Y H:i') }}<br>
                                        <strong>Modifié le:</strong> {{ faq.updatedAt|date('d/m/Y H:i') }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Translations -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Traductions</h5>
                            </div>
                            <div class="card-body">
                                <!-- Language Tabs -->
                                <ul class="nav nav-tabs" id="languageTabs" role="tablist">
                                    {% for language in languages %}
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                                                    id="{{ language.code }}-tab" 
                                                    data-bs-toggle="tab" 
                                                    data-bs-target="#{{ language.code }}-content" 
                                                    type="button" role="tab">
                                                {{ language.nativeName }}
                                                {% if language.isDefault %}
                                                    <span class="badge bg-primary ms-1">Défaut</span>
                                                {% endif %}
                                            </button>
                                        </li>
                                    {% endfor %}
                                </ul>

                                <!-- Language Content -->
                                <div class="tab-content" id="languageTabsContent">
                                    {% for language in languages %}
                                        {% set translation = faq.getTranslation(language.code) %}
                                        <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                                             id="{{ language.code }}-content" 
                                             role="tabpanel">
                                            <div class="p-3">
                                                <div class="mb-3">
                                                    <label for="question_{{ language.code }}" class="form-label">
                                                        Question *
                                                    </label>
                                                    <input type="text" 
                                                           class="form-control" 
                                                           id="question_{{ language.code }}" 
                                                           name="translations[{{ language.code }}][question]" 
                                                           value="{{ translation ? translation.question : '' }}"
                                                           required>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="answer_{{ language.code }}" class="form-label">
                                                        Réponse *
                                                    </label>
                                                    <textarea class="form-control" 
                                                              id="answer_{{ language.code }}" 
                                                              name="translations[{{ language.code }}][answer]" 
                                                              rows="8" required>{{ translation ? translation.answer : '' }}</textarea>
                                                    <div class="form-text">La réponse complète à la question</div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('admin_faq_index') }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-floppy"></i> Sauvegarder
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}